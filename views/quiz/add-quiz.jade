extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Soal
			small it all starts here
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Soal Quizzz
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/quiz/add')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| id_quiz
									input(type='text',value='#{id_quiz}',name='id_quiz',placeholder='Masukkan id_quiz', autofocus).form-control
								.form-group
									label
										| quiz
									input(type='text',value='#{quiz}',name='quiz',placeholder='Masukkan quiz', autofocus).form-control
								.form-group
									label
										| a
									input(type='text',value='#{a}',name='a',placeholder='Masukkan optiona').form-control
								.form-group
									label
										| b
									input(type='text',value='#{b}',name='b',placeholder='Masukkan optionb').form-control
								.form-group
									label
										| c
									input(type='text',value='#{c}',name='c',placeholder='Masukkan optionc').form-control
								.form-group
									label
										| d
									input(type='text',value='#{d}',name='d',placeholder='Masukkan optiond').form-control
								.form-group
									label
										| answer
									input(type='text',value='#{answer}',name='answer',placeholder='Masukkan answer').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/quiz').btn.btn-primary.pull-right
									| Back